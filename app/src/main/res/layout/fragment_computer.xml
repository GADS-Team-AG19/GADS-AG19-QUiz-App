<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="game"
            type="com.example.gadsag19educationquiz.ui.dashboard.ComputerFragment" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.DashboardActivity">


    <TextView
        android:id="@+id/word_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 of 10"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/title_question" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Score: 20"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/score" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@{game.currentQuestion.text}"
        android:textColor="@color/dark_brown"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_count"
        tools:text="CAD stands for  " />

    <RadioGroup
        android:id="@+id/questionRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/optionA"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_18sp"
            android:paddingStart="10dp"
            android:text="@{game.answers[0]}"
            android:layout_marginBottom="18dp"
            android:layout_height="wrap_content"
            tools:text=" Computer Aided Design" />

        <RadioButton
            android:id="@+id/optionB"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_18sp"
            android:paddingStart="10dp"
            android:text="@{game.answers[1]}"
            android:layout_marginBottom="18dp"
            android:layout_height="wrap_content"
            tools:text=" Computer Aided Design" />

        <RadioButton
            android:id="@+id/optionC"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_marginBottom="18dp"
            android:textSize="@dimen/text_size_18sp"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:text="@{game.answers[2]}"
            tools:text=" Computer Aided Design" />

        <RadioButton
            android:id="@+id/optionD"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_18sp"
            android:paddingStart="10dp"
            android:text="@{game.answers[3]}"
            android:layout_height="wrap_content"
            tools:text=" Computer Aided Design" />
    </RadioGroup>


    <Button
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/inder"
        android:paddingVertical="@dimen/padding_16dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionRadioGroup" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>